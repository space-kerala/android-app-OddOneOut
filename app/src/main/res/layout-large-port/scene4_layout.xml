<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.oddoneout.MainActivity"
    tools:targetApi="ice_cream_sandwich"
    android:layout_row="2"
    android:columnCount="2"
    android:background="@drawable/b3"
    android:animateLayoutChanges="false"
    android:soundEffectsEnabled="false">


    <ImageButton
        app:srcCompat="@drawable/clockxml"
        android:id="@+id/imageButton_clock"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_height="250dp"
        android:layout_width="250dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        android:background="@drawable/clock" />

    <ImageButton
        android:layout_height="220dp"
        app:srcCompat="@drawable/watermelonxml"
        android:id="@+id/imageButton_watermelon"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="75dp"
        android:layout_width="250dp"
        android:scaleType="fitXY"
        android:background="@drawable/watermelon"
        android:layout_column="0" />


    <ImageButton
        android:src="@drawable/mangoxml"
        android:id="@+id/imageButton_mango"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:background="@drawable/mango" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back2"
        android:id="@+id/back_id"
        android:background="@android:color/transparent"
        android:layout_row="3" />

    <ImageButton
        app:srcCompat="@drawable/bananaxml"
        android:id="@+id/imageButton_banana"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:layout_width="250dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/banana"
        android:layout_row="0"
        android:layout_column="0" />


</GridLayout>
