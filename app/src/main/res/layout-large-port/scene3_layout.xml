<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.oddoneout.MainActivity"
    tools:targetApi="ice_cream_sandwich"
    android:layout_row="2"
    android:columnCount="2"
    android:background="@drawable/b3"
    android:animateLayoutChanges="false"
    android:soundEffectsEnabled="false">


    <ImageButton
        app:srcCompat="@drawable/shelfxml"
        android:id="@+id/imageButton_shelf"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_height="250dp"
        android:layout_width="250dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        android:background="@drawable/shelf"
        android:onClick="onClick" />


    <ImageButton
        android:src="@drawable/applexml"
        android:id="@+id/imageButton_apple"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:background="@drawable/apple"
        android:onClick="onClick" />

    <ImageButton
        app:srcCompat="@drawable/chairxml"
        android:id="@+id/imageButton_chair"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_width="250dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/chair"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back2"
        android:id="@+id/back_id3"
        android:background="@android:color/transparent"
        android:layout_row="14"
        android:layout_column="0"
        android:onClick="onClick" />

    <ImageButton
        android:layout_height="250dp"
        app:srcCompat="@drawable/tablexml"
        android:id="@+id/imageButton_table"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:layout_width="250dp"
        android:scaleType="fitXY"
        android:background="@drawable/table"
        android:onClick="onClick"
        android:layout_row="1"
        android:layout_column="0" />


</GridLayout>
