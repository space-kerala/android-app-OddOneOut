<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.oddoneout.MainActivity"
    tools:targetApi="ice_cream_sandwich"
    android:layout_row="2"
    android:columnCount="2"
    android:background="@drawable/b3"
    android:animateLayoutChanges="false"
    android:soundEffectsEnabled="false">


    <ImageButton
        app:srcCompat="@drawable/frogxml"
        android:id="@+id/imageButton_frog"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:onClick="onClick" />

    <ImageButton
        android:layout_height="150dp"
        app:srcCompat="@drawable/bearxml"
        android:id="@+id/imageButton_bear"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_width="150dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:onClick="onClick" />


    <ImageButton
        android:src="@drawable/lionxml"
        android:id="@+id/imageButton_lion"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back2"
        android:id="@+id/back_id"
        android:background="@android:color/transparent" />

    <ImageButton
        app:srcCompat="@drawable/plantxml"
        android:id="@+id/imageButton_plant"
        android:layout_marginLeft="30dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="onClick" />


</GridLayout>
